@import "../../stylus-lib/var.styl"

.survey-item
  text-align center

  .item-prop
    font-size 16px

  .item-value
    margin 8px 0 12px
    color gblue
    font-size 20px

  .item-avg
    color #888
    font-size 13px
    white-space nowrap

.survey-item-cell
  .t-icon
    top -2px
  &.trend-up
    .t-icon
      color red
    .trend-ratio
      color red

  &.trend-down
    .t-icon
      color green
      transform(rotate(180deg))

    .trend-ratio
      color green

  .item-prefix
    font-family Arial

  .item-suffix
    margin-left 5px
    font-size 13px

@import "../../stylus-lib/var.styl"

.input-wrap
  position relative
  display inline-block
  border:1px solid #ddd
  background-color #fff

  .input-text
    display block
    border none
    background none
    outline none
    width 100%
    padding 6px 28px 6px 12px

  .input-clear
    position absolute
    right 5px
    top 50%
    transform(translateY(-50%))
    color #666
